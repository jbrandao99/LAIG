            </materials>
            <texture id="none" length_s="0.1" length_t="0.1"/>
            <children>
               <componentref id="entrada_baliza" />
                <componentref id="suporte_baliza1" />
            </children>
        </component>

        <component id="Balizas1">
            <transformation>
                <scale x="0.1" y="0.1" z="0.1" />
